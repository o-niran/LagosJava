<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/displayBlack">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatarId"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="11dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/user_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/avatarId"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/avatarId"
        android:layout_toRightOf="@+id/avatarId"
        android:layout_weight="2"
        android:fontFamily="serif"
        android:paddingLeft="@dimen/leftPadding"
        android:text="0_niran"
        android:textColor="@color/displayWhite"
        android:textSize="14sp" />
</RelativeLayout>