<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/displayBlack"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:weightSum="1">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userAvatarId"
        android:layout_width="174dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_weight="0.09" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif"
        android:text="Olusegun Adeniran"
        android:textColor="@color/displayWhite"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/user_html"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:autoLink="web"
        android:clickable="true"
        android:fontFamily="sans-serif"
        android:text="www.github.com/o_niran"
        android:textColor="@color/displayWhite"
        android:textSize="15sp" />

    <Button
        android:id="@+id/share"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif"
        android:onClick="shareUrl"
        android:text="@string/share"
        android:textColor="@color/displayWhite" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="fill_horizontal"
        android:text="@string/aboutGitHub"
        android:textColor="@color/offWhite"
        android:textSize="13sp" />


</LinearLayout>
